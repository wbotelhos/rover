rules:
  indent: [2, 2]
  strict: [2, 'function']
  no-trailing-spaces: 1
  quotes: [2, single]
  key-spacing: [2, { align: "value" }]
  no-multi-spaces: [1, {
    exceptions: {
      AssignmentExpression: true,
      VariableDeclarator:   true
    }}]

globals:
  $: true
  window: true

  clearInterval: true
  setInterval:   true
